{
    "name": "audioszum",
    "version": "1.0.0",
    "description": "Website audioszum.pl",
    "main": "index.js",
    "customDistStructure": {
        "config": {
            ".css": "css",
            "img": [
                ".jpg",
                ".png",
                ".svg",
                ".webp"
            ]
        },
        "options": {
            "development": true
        }
    },
    "scripts": {
        "clean": "rm -rf dist/ && rm -rf public/",
        "start:dev": "parcel serve src/index.pug -p 8080",
        "build:prod": "rm -rf public/ && parcel build src/index.pug --no-source-maps --out-dir public && parcel build src/404.pug --no-source-maps --out-dir public",
        "format": "npx prettier --write .",
        "lint": "eslint ."
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && lint-staged"
        }
    },
    "lint-staged": {
        "*.js": "eslint"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-react": "^7.12.10",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-react": "^7.23.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "npm": "^6.14.11",
        "parcel-bundler": "^1.12.5",
        "parcel-plugin-custom-dist-structure": "^1.1.17",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "pug": "^3.0.0",
        "sass": "^1.32.5"
    },
    "dependencies": {
        "autoprefixer": "^9.8.6",
        "normalize.css": "^8.0.1",
        "spinkit": "^2.0.1",
        "tailwindcss": "1.9.6"
    }
}
